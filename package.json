{
    "name": "PapeKary",
    "version": "1.0.0",
    "description": "La paleria de Kary",
    "main": "index.js",
    "scripts": {
        "compile:sass": "npx sass --watch scss:assets/css",
        "dev": "npx sass --watch scss:assets/css",
        "build:css": "npm run build:home && npm run build:tienda && npm run build:componentes && npm run build:404",
        "build:home": "sass scss/pages/_home.scss:assets/css/home.css --style=compressed",
        "build:tienda": "sass scss/pages/_tienda.scss:assets/css/tienda.css --style=compressed",
        "build:componentes": "sass scss/pages/_componentes.scss:assets/css/componentes.css --style=compressed",
        "build:404": "sass scss/pages/_404.scss:assets/css/404.css --style=compressed",
        "build:shared": "sass scss/shared/_base.scss:assets/css/shared-base.css --style=compressed && sass scss/shared/_layout.scss:assets/css/shared-layout.css --style=compressed",
        "build:blog": "sass scss/blog/main.scss:assets/css/blog.css --style=compressed",
        "postcss:all": "postcss assets/css/*.css --dir assets/css/optimized --config config/postcss.config.js",
        "build:all": "npm run build:css && npm run build:shared && npm run build:blog && npm run postcss:all",
        "extract:critical": "node scripts/extract-critical.js",
        "build:critical": "npm run build:all && npm run extract:critical",
        "purge:css": "npx purgecss --config config/purgecss.config.js",
        "purge:css:advanced": "node scripts/optimize-css-advanced.js",
        "build:purged": "npm run build:all && npm run purge:css",
        "build:purged:advanced": "npm run build:all && npm run purge:css:advanced",
        "optimize:images": "node scripts/optimize-images.js",
        "optimize:images:advanced": "node scripts/optimize-images-advanced.js",
        "build:production": "npm run build:purged && npm run optimize:images",
        "watch:all": "npm run build:all && npm run dev",
        "watch:blog": "npx sass --watch scss/blog:assets/css",
        "lighthouse": "lighthouse --output html --output-path ./lighthouse-report.html",
        "performance:test": "npm run build:production && npm run lighthouse",
        "update:blog": "node scripts/update-blog-css.js",
        "build:blog:complete": "npm run build:blog && npm run update:blog",
        "test:performance": "node scripts/performance-test.js",
        "test:performance:advanced": "node scripts/performance-test-advanced.js",
        "test:performance:simple": "node scripts/performance-test-simple.js",
        "minify:all": "npm run postcss:all && echo '✅ Minificación CSS completada'",
        "optimize:js": "node scripts/optimize-js-tree-shaking.js",
        "optimize:all": "node scripts/optimize-all.js"
    },
    "keywords": [
        "Papeleria",
        "Oficina"
    ],
    "author": "Liz Martinez",
    "license": "ISC",
    "devDependencies": {
        "autoprefixer": "^10.4.20",
        "critical": "^7.2.1",
        "cssnano": "^7.0.2",
        "postcss": "^8.4.38",
        "postcss-cli": "^11.0.1",
        "postcss-import": "^16.1.0",
        "puppeteer": "^24.17.1",
        "purgecss": "^7.0.2",
        "sass": "^1.82.0",
        "sharp": "^0.34.3"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.7.2",
        "animate.css": "^4.1.1",
        "bootstrap": "^5.3.3",
        "imagemin": "^9.0.1"
    }
}
